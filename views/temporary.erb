<h4 id="new-album-button" class="list-album-item-heading">Add New Album</h4>
<form id="new-album-form" class="form-horizontal" method="POST" action="/new_album">
  <fieldset>
    <legend>New Album</legend>
    <div class="form-album">
      <label for="inputAlbumName" class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputAlbumName" placeholder="Album Name" name="name" required>
      </div>
    </div>
    <div class="form-album">
      <label for="inputAlbumMembers" class="col-lg-2 control-label">Members</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputAlbumMembers" placeholder="Album member names, separated by commas" name="names">
      </div>
    </div>
    <div class="form-album">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button class="btn btn-default cancel-user">Cancel</button>
      </div>
    </div>
  </fieldset>
</form>
