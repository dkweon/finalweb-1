<h3 class="list-album-item-heading"><%= g.name %></h4>
  <form id="new-member-form" class="form-horizontal" method="POST" action="/new_album_member?id=<%= g.id %>">
    <fieldset>
      <div class="form-group">
        <div class="col-lg-10">
          <!--
          ################################################
          List Group Members in an input field, add new member form
          ################################################
        -->
        <% if g.users.size > 1%>
        <% album_users = ''%>
        <% g.users.each do |u| %>
        <% album_users << u.name + ', '%>
        <% end %>
        <input type="text" class="form-control input" id="inputName" value="<%= album_users%>" name="names" required>
        <% else %>
        <input type="text" class="form-control input" id="inputName" placeholder="Enter Names Separated By Commas" name="names" required>
        <%end%>
      </div>
    </div>
  </fieldset>
</form>
