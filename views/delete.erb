<form class="form-horizontal" method="POST" action="/delete?type=<%= @type %>&id=<%= @id %>">
  <fieldset>
    <legend>Confirm</legend>
    <div class="form-album">
      <% if @type == 'g' %>
      <label class="col-lg-2 control-label">You are deleting <%= @album.name %>. <br/> Are you sure?</label>
      <% elsif @type == 'u' %>
      <label class="col-lg-2 control-label">Delete your account?</label>
      <% end %>
      <div class="col-lg-10">
        <div class="radio">
          <label>
            <input type="radio" name="confirm" value="yes" checked="">
            Yes
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="confirm" value="no">
            No
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button class="btn btn-default cancel-delete">Cancel</button>
      </div>
    </div>
  </fieldset>
</form>
