<h1><%= @user.name %>'s albums!</h1>
<% @all_albums.each do |album| %>
<p>
  <form action= '/delete/<%= album.id %>' style='display:inline'>
    <input type= 'submit' value='Delete' />
  </form>
  <a href= '/<%= album.id %>'> <%= album.name %> </a>
</p>
<% end %>
<form action="/new_album" method='POST'>
  <strong>Add a new album:</strong>
  <input type='text' name='name' placeholder='album name' />
  <input type='submit' value='Save'/>
</form>

<p>
  <a href="/logout" class="btn btn-default">logout</a>
  <a href="/delete_user" class="btn btn-danger">delete my account</a>
</p>
